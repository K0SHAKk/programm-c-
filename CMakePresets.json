{
    "version": 8,
    "configurePresets": [
        {
            "name": "Пользовательская предустановка конфигурации",
            "displayName": "Пользовательская предустановка конфигурации",
            "description": "Настраивает генератор Ninja, сборку и каталог установки",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
            }
        },
        {
            "name": "GCC 13.2.0 x86_64-w64-mingw32 (mingw64)",
            "displayName": "GCC 13.2.0 x86_64-w64-mingw32 (mingw64)",
            "description": "Использование компиляторов: C = C:\\msys64\\mingw64\\bin\\gcc.exe, CXX = C:\\msys64\\mingw64\\bin\\g++.exe",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_C_COMPILER": "C:/msys64/mingw64/bin/gcc.exe",
                "CMAKE_CXX_COMPILER": "C:/msys64/mingw64/bin/g++.exe",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ]
}